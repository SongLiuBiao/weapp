.workbench
    .workbench-head
        height 244px
        background #15B3E9
        position relative
        .workbench-head-logo 
            width 160px
            height 160px
            background rgba(255,255,255,1)
            border 6px solid rgba(25,172,233,1)
            border-radius 50%
            position absolute
            left 50%
            top 34%
            transform translate(-50%,-50%)
            z-index 1
            text-align center
            line-height  160px
            image
                width 100%
                height 100%
                border-radius 50%
        .workbench-head-content
            height 300px
            position absolute
            background rgba(255,255,255,1)
            box-shadow 0px 0px 12px 0px rgba(196,196,196,0.5)
            border-radius 10px
            width 686px
            bottom -150px
            left 50%
            transform translateX(-50%)
            box-sizing border-box
            padding 100px 94px 40px 42px
            .title
                color #333333
                font-size 32px
                font-weight 700
                margin-bottom 38px
                margin-left: 43%
            .content
                display flex
                justify-content space-between
                .item 
                    .img
                        width 68px
                        height 68px
                    .text 
                        display inline-block
                        color #999999
                        font-size 24px
                        margin-left 20px
                        .price
                            color #333333
                            font-weight 700
                            font-size 32px
        
    .workbench-middle
        padding 150px 32px 20px 32px
        background #F7F7F7
        .workbench-middle-item
            padding 24px 30px 32px 30px
            margin-top 20px
            background rgba(255,255,255,1)
            border-radius 10px
            .title
                display flex
                justify-content space-between
                .left
                    color #333333
                    font-size 32px
                    font-weight 700
                .right
                    color #19ACE9
                    font-size 28px 
                    padding-top 5px
            .content
                // justify-content space-between
                overflow hidden
                .item
                    float left
                    width 150px 
                    margin-top 40px
                    text-align center
                    color #666666
                    font-size 24px
                    .count
                        color #333333
                        font-size 32px
                        font-weight 700
                        margin-bottom 10px
                        image
                            width 60px
                            height 64px
                .shoppingCart
                    position relative
                    .shoppingCartCount
                        width 70px
                        height 32px
                        position absolute
                        top -8px
                        right -8px
                        color white
                        image
                            width 70px
                            height 32px
                            position absolute
                            top 0
                            left 0
                        text
                            width 70px
                            height 30px
                            text-align center
                            position absolute
                            top 0
                            left 0
                            z-index 1
            .none
                text-align center
                image
                    width 202px
                    height 122px
                .none-desc
                    color #999999
                    font-size 24px
                    width 100%
                    margin 16px 0 
                .none-btn
                    width 240px
                    background #19ACE9
                    border-radius 30px
                    border 0
                    color white
                    font-size 28px
                    height 60px
                    line-height 60px
                    text 
                        font-size 35px
                        margin-right 8px
    .modal
        .at-modal__container
            width: 600px

        .modal-title
            color #333333
            font-size 32px
            margin 40px 0 16px 0 
            text-align center
        .modal-phonenum
            color #333333
            font-size 40px
            text-align center
        .modal-btn
            padding  56px  46px 40px 46px 
            display flex
            justify-content space-between
            .modal-btn-left
                width 220px
                height 88px
                background rgba(255,255,255,1)
                border-radius 10px
                border 1px solid rgba(25,172,233,1)
                color  rgba(25,172,233,1)
            .modal-btn-right
                width 220px
                height 88px
                background rgba(25,172,233,1)
                border-radius 10px
                border 1px solid rgba(25,172,233,1)
                color  rgba(255,255,255,1)

          
               
                
                    